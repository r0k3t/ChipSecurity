<Window x:Class="SecurityClient.SecurityClientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecurityClientView" Height="500" Width="700">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="0.827*"/>
    		<ColumnDefinition Width="0.173*"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.125*"/>
    		<RowDefinition Height="0.11*"/>
    		<RowDefinition Height="0.105*"/>
    		<RowDefinition Height="0.66*"/>
    	</Grid.RowDefinitions>
    	<Label Content="Enter Security key" HorizontalAlignment="Left" Margin="21.2,16.2,0,8" Width="212"/>
    	<TextBox Margin="21.2,8,63.391,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding SecurityKey, UpdateSourceTrigger=PropertyChanged}"/>
    	<Button Content="Button" Grid.Column="1"  Grid.Row="1" Command="{Binding ValidateAccess}"/>
    	<ListBox 
		 	ItemsSource="{Binding Results}"
		 	Grid.Row="3"/>
        
    </Grid>
</Window>
